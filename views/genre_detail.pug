extends layout

block content
    h1 Genre: #{genre.name}

    div(style='margin-left: 20px; margin-top: 20px')

        h2 Books

        dl
        each book in genre_books
            dt
                a(href=book.url) #{book.title}
            dd #{book.summary}

        else
            p This genre has no books.

    p
        a.btn.btn-primary(href='/catalog/genres/' + genre._id + '/edit') Edit
    p
        a.btn.btn-primary(href='/catalog/genres/' + genre._id + '/delete') Delete
